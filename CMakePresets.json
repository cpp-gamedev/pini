{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "out",
            "cacheVariables": {
                "CMAKE_C_COMPILER": {
                    "type": "STRING",
                    "value": "clang"
                },
                "CMAKE_CXX_COMPILER": {
                    "type": "STRING",
                    "value": "clang++"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "STRING",
                    "value": "Debug"
                },
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "STRING",
                    "value": "1"
                }
            }
        }
    ]
}